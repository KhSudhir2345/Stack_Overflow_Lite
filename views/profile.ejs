<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <nav>
        <div class="site-title">
            <a href="/"><h1 style="font-family: sans-serif; color: blue;">Stack Overflow Lite</h1></a>
        </div>
        <a href="/profile/Answers">My Answers</a>
        <img src="https://www.shutterstock.com/image-vector/user-icon-trendy-flat-style-600nw-1697898655.jpg" alt="User Icon">
        <h4>Username</h4>
    </nav>
    <div class="User_Questions">
        <section class="Question-Section">
            <% if (questions && questions.length > 0) { %>
                <h2>Your Questions</h2>
                <% questions.forEach(question => { %>
                    <a href="/questions/<%= question._id %>/answers" style="display: block;"><%= question.Description %></a>
                <% }); %>
            <% } else { %>
                <p>You haven't posted any questions yet.</p>
            <% } %>
        </section>
    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>
